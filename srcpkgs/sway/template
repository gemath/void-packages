# Template file for 'sway'
pkgname=sway
version=1.0.beta.2
revision=1
build_style=meson
# configure_args="build"
make_cmd="ninja"
make_build_args="-C build"
hostmakedepends="scdoc git"
makedepends="pkg-config json-c-devel wlroots-devel wayland-devel cairo-devel pango-devel gdk-pixbuf-devel"
depends="wayland pcre pam"
conf_files="/etc/sway/config /etc/pam.d/swaylock"
short_desc="An i3-compatible window manager for Wayland"
maintainer="Juan RP <xtraeme@voidlinux.eu>"
license="MIT"
homepage="http://swaywm.org"
_act_version=$(echo $version | sed -e 's/\.beta/-beta/')
distfiles="https://github.com/swaywm/sway/archive/${_act_version}.tar.gz"
checksum=a0e93b8ac51fa2edbf8fbe007f716ac934efa77c35b1a76f400819500fdf20c1
wrksrc=${pkgname}-${_act_version}

post_install() {
	vlicense LICENSE
}
